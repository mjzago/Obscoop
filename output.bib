@article{
    author = {Tuominen, Pasi and Syrja, Pasi and Sjogren, Helena and Tuominen, Terhi},
    title = {CSR Activities in Consumer Cooperatives Exploring the Case of Finnish S Group Cooperatives Based on Board Reporting},
    publisher = {Elsevier Ltd},
    year = {2017},
    journal = {Journal of Co-operative Organization and Management},
    volume = {5},
    number = {2},
    pages = {108--117},
    url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85034578469&doi=10.1016%2fj.jcom.2017.10.002&partnerID=40&md5=ff5e03db823ec09cb9af8bf13cc7adee},
    abstract = {Research has often depicted consumer co-operatives as specifically socially responsible organizations that both can and should take CSR issues especially seriously. In this paper, we analyse the CSR activities of the regional co-operatives of the leading Finnish retailer S Group based on annual board reporting. In light of our findings, we argue that no consistently high level of CSR can be identified across the S Group and all its regional co-operatives. Therefore, we do not deem it feasible to conclude that consumer co-operatives are inherently socially responsible organizations merely due to their organization form. Instead, it seems that the fact that the members are in charge in a consumer co-operative and elect a board to oversee it serves to keep the responsibility in the hands of local residents, but at the same time, it also requires a genuine interest towards governance of the co-operative as well as CSR issues. In the absence of either, the level of responsibility is likely to depend on the interest management and board members show in these issues. The paper concludes with practical implications for the S Group and consumer co-operatives in general as well future avenues for research on CSR and consumer co-operatives. © 2017 Elsevier Ltd},
    doi = {10.1016/j.jcom.2017.10.002}
}

@article{
