@article{
    author = {Mayor, Luis and Lindner, Line F. and Knoebl, Christoph F. and Ramalho, Ana and Berruto, Remigio and Sanna, Francesca and Rossi, Daniele and Tomao, Camilla and Goodburn, Billy and Avila, Concha and Leijdens, Marg and Stollewerk, Katharina and Bregler, Michael and Koidis, Christos and Morin, Alexandre and Milicic, Vesna and Fadini, Giulia and Lazaro-Mojica, Jonas and Busato, Patrizia},
