@article{
    author = {Taylor, Richard G. and Robinson, Sammie L.},
    title = {An Information System Security Breach at First Freedom Credit Union What Goes in Must Come Out},
    publisher = {Allied Academies},
    year = {2015},
    journal = {},
    volume = {21},
    number = {1},
    pages = {131--138},
