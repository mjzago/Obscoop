    doi = {10.1111/j.1468-232X.1995.tb00387.x}
}

@article{
    author = {FITZROY, FR and KRAFT, K},
    title = {Forms of Profit Sharing and Firm Performance  Theoretical Foundations and Empirical Problems},
    publisher = {HELBING & LICHTENHAHN VERLAG AG},
    year = {1992},
    journal = {Kyklos},
    volume = {45},
    number = {2},
    pages = {209--225},
    url = {0},
    abstract = {Most work on profit sharing has been empirical, and in a rare consensus, almost all studies have found a positive relationship between profit sharing and productivity. Theoretical foundations have been neglected in this work, and no attempt has been made to relate these empirical findings to extensive evidence for rent-sharing, or wage differentials related to profits that are hard to explain on the basis of unobserved individual characteristics. Here we argue that explicit and implicit forms of profit sharing should be viewed as two sides of the same coin, and can both be given convincing theoretical foundations. Relevant models include the importance of fairness and equitable pay and repeated games with mutual monitoring by profit or rent-sharing workers. Most empirical work has neglected the selection problem, or the existence of favourable but unobserved preconditions for profit sharing, and so probably exaggerates productivity gains from profit sharing in isolation and benefits from tax incentives. Cross-sectional regressions have also failed to uncover specific channels of influence of profit sharing.},
    doi = {10.1111/j.1467-6435.1992.tb02114.x}
}

