@article{
    author = {Choe, Hyun and Lee, Jaesub},
    title = {A Comparative Study on Two Ways of Community Building With Different Commons Ownership Modes Focusing on the Cases of Gasiri and Seonheul 1ri},
    publisher = {Institute of Social Development and Policy Research, Seoul National University},
    year = {2018},
