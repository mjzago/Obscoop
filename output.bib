    abstract = {The main aim of this paper is to study the propensity of consumer cooperatives (Coops) to use incentive schemes in situations of strategic interaction with profit-maximizing firms (PMFs). Our model provides a reason why Coops are less prone than PMFs to pay variable bonuses to their managers. We show that this occurs under price competition when in equilibrium the Coop prefers to pay a flat wage to its manager relying instead on her intrinsic motivation, whereas the profit-maximizing rival adopts a variable, high-powered incentive scheme. The main rationale is that, by recruiting a manager whose preferences are aligned with the company goals (e.g., a consumer-owner), the Coop is per se highly expansionary in term of output. Therefore, the Coop does not need to rely on an externally hired manager who sets prices aggressively to expand market share and quantity. Furthermore, adopting a monetary reward based on sales and profits leads to distorted incentives with respect to the Coop’s goal, which after all is the welfare of its members. © 2013, Springer-Verlag Wien.},
    doi = {10.1007/s00712-013-0384-y}
}

@article{
    author = {Ballve, Teo},
