@article{
    author = {Gibbon, P.},
    title = {Peasant Cotton Cultivation and Marketing Behaviour in Tanzania Since Liberalisation},
    publisher = {},
    year = {1998},
    journal = {},
    volume = {98},
    number = {16},
    pages = {1--35},
