@article{
    author = {van Gastel, AJG and Bishaw, Z and Asiedu, E},
    title = {The Role of International Agricultural Research Centers in Supporting the Seed Sector},
    publisher = {INT CROPS RESEARCH INST SEMI-ARID TROPICS},
    year = {1997},
    journal = {},
    volume = {},
    number = {},
    pages = {71--79},
    url = {},
    abstract = {International agricultural research centers (IARCs) have been successful in developing new varieties in partnership with national agricultural research systems (NARS). However, adoption of these varieties has been low, particularly in Africa, where seed production and distribution systems are generally inadequate. IARCs have much of the infrastructure and staff needed to help improve the seed sector, but historically have focused on their core area of competence-research-rather than on development work (extension, seed production). These priorities are unlikely to change, in view of recent and continuing budget cuts. This paper discusses efforts made by six IARCs (CIAT, ICARDA, ICRISAT, IITA, ILRI, WARDA) to support the seed sector in their respective mandate regions. ICARDA is the only IARC with a currently functional seed unit. However, all IARCs participate in seed sector improvement in various ways, e.g., production of small quantities of breeder/basic seed; technical advice on seed production to NARS, public and private companies, NGOs, and farmers' cooperatives; monitoring adoption and seed production of released varieties; assessing constraints to seed multiplication and marketing; training of seed sector staff; information dissemination through brochures and seed production manuals; and provision of policy advice to governments.},
    doi = {}
}

@article{
    author = {Bjorkhaug, Hilde and Vik, Jostein and Richards, Carol},
    title = {The Chicken Game  Organization and Integration in the Norwegian Agrifood Sector},
    publisher = {EMERALD GROUP PUBLISHING LTD},
    year = {2017},
    journal = {},
    volume = {24},
    number = {},
    pages = {45--69},
    url = {0},
    abstract = {Up until recent years, all agricultural production in Norway was strictly regulated through spatial policy (location), production quotas and other price and market regulations. Prices and products were handled by the farmers' cooperatives. International (e.g. WTO agreements) and domestic pressure has gradually loosened the governmental regulation of chicken and eggs. Economic (e.g. new ownerships), technological (innovations throughout the whole chain), political and institutional (liberalization) and cultural (e.g. in consumption and farming) changes have reconfigured the landscapes of chicken meat production, opening up new opportunities for the chicken industry. Chicken therefore makes a particularly good case for exploring recent major changes in the agri-food system. In this chapter, we investigate evolving rules, risks, challenges and opportunities in and around chicken meat value chains. Empirically. ire build on interviews, document studies and statistics on the structural development of the chicken industry and we discuss how these changes are developing in other parts of the Norwegian agri-food system.},
    doi = {10.1108/S1057-192220170000024003}
}

@article{
    author = {Ye Qiongwei,  and Li Ting,  and Song Guangxing, },
    title = {On the Business Model of Modern Rural Commodity Circulation Network in the Perspective of Ebusiness},
    publisher = {IEEE COMPUTER SOC},
    year = {2009},
    journal = {},
    volume = {},
    number = {},
    pages = {150--+},
    url = {0},
    abstract = {Rural commodity circulation network is playing a significant role of one network multi-purpose and two-way circulation in the urban and rural commodity market. Taking the Supply and Marketing Cooperative (SMC), an organization of economic cooperation in China, for an example, this paper proposed a business model for the modern rural commodity circulation network based on extensive and thorough actual survey. That is to strengthen the construction of rural commodity circulation carriers, including the leading enterprises, distribution centers, agriculture product market, recovery network of renewable resources, chain supermarket, franchise stores, direct-sale stores and so on, by using the newly developing e-business technique and information communication technology (ICT) and actively taking the advantages of the SMC as a government functional department. Then, construct and improve the information network of taking the leading enterprises as guide, trading market and distribute centers as support, retail stores as terminal, management information system of rural commodity circulation as supply chain. And ultimately construct a comprehensive rural commodity circulation network on the virtual marketing platform through the e-business of rural circulation.},
