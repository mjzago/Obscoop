@article{
    author = {Shen, Yun and Wang, Jinmin and Wang, Luyao and Wu, Bin and Ye, Xuelan and Han, Yang and Wang, Rui and Chandio, Abbas Ali},
    title = {How Do Cooperatives Alleviate Poverty of Farmers Evidence From Rural China},
    publisher = {MDPI},
    year = {2022},
    journal = {Land},
