@article{
    author = {Larionescu, Maria},
    title = {Social Economy and Cooperation Sector in Romania a Comparativesociohistorical Perspective Economia Socialǎ Şi Cooperałia În România O Perspectivǎ Socioistoricǎ Comparatǎ},
