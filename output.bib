@article{
    author = {Wairegi, Lydia W.I. and Bennett, Mica and Nziguheba, Generose and Mawanda, Ashiraf and Rios, Carlos de los and Ampaire, Edidah and Jassogne, Laurence and Pali, Pamela and Mukasa, David and van Asten, Piet J.A.},
    title = {Sustainably Improving Kenyas Coffee Production Needs More Participation of Younger Farmers With Diversified Income},
    publisher = {Elsevier Ltd},
    year = {2018},
    journal = {Journal of Rural Studies},
