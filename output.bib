@article{
    author = {Santos, Manoela Silveira Dos and Ianda, Tito Francisco and Padula, Antonio Domingos},
    title = {Bioenergy as a Means to Social and Economic Development in Guineabissau a Proposal for a Biodiesel Production and Use Program},
