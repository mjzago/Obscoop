@article{
    author = {Nath, Maanik},
    title = {Do Institutional Transplants Succeed Regulating Raiffeisen Cooperatives in South India 19301960},
    publisher = {CAMBRIDGE UNIV PRESS},
    year = {2021},
    journal = {Business History Review},
    volume = {95},
