@article{
    author = {Davenport, Robert Brooks and Vivan, Jorge Luiz and May, Peter Herman and Nunes, Paulo Cesar and de Vargas, Lucila Nunes and Costa, William Leles Souza and Oliveira, Amanda Ribeiro and Rajao, Raoni Lucas},
    title = {Adaptive Forest Governance in Northwestern Mato Grosso Brazil Pilot Project Outcomes Across Agrarian Reform Landscapes},
    publisher = {John Wiley and Sons Ltd},
    year = {2017},
