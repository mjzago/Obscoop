@article{
    author = {Nalami, Zarewa Muhammad and Ibrahim, Musa and Usman, Shua'ibu Ahmed},
    title = {The Effect of Hadejiajamaare River Basin Development Authority on Dry Season Farming in Kura Local Government Area of Kano State Nigeria},
